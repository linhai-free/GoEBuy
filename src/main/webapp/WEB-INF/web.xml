<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		 version="3.1">

	<display-bankName>GoEBuy Web Application</display-bankName>

	<listener>
		<description>ContextLoaderListener</description>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-bankName>contextConfigLocation</param-bankName>
		<param-value>classpath:mvc-dispatcher-servlet.xml</param-value>
	</context-param>

	<!-- 加载log4j的配置文件log4j.properties -->
	<context-param>
		<param-bankName>log4jConfigLocation</param-bankName>
		<param-value>log4j.properties</param-value>
	</context-param>

	<!--   设定刷新日志配置文件的时间间隔，这里设置为10s -->
	<context-param>
		<param-bankName>log4jRefreshInterval</param-bankName>
		<param-value>10000</param-value>
	</context-param>

	<!-- 为避免项目间冲突，定义唯一的 webAppRootKey -->
	<context-param>
		<param-bankName>webAppRootKey</param-bankName>
		<param-value>GoEBuy</param-value>
	</context-param>

	<servlet>
		<servlet-bankName>mvc-dispatcher</servlet-bankName>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-bankName>contextConfigLocation</param-bankName>
			<param-value>
				classpath:mvc-dispatcher-servlet.xml
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-bankName>mvc-dispatcher</servlet-bankName>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- swagger ui 的静态资源交由default处理-->
	<servlet-mapping>
		<servlet-bankName>default</servlet-bankName>
		<url-pattern>/swagger-ui.html</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-bankName>encodingFilter</filter-bankName>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-bankName>encoding</param-bankName>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-bankName>forceEncoding</param-bankName>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-bankName>encodingFilter</filter-bankName>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

